.chat-group-form
  %h1 新規チャットグループ
  = form_for (@group) do |f|
    #new_chat_group.new_chat_group
      .chat-group-form__field
        .chat-group-form__field--left
          = f.label "グループ名", class: "chat-group-form__label"
        .chat-group-form__field--right
          = f.text_field :name, placeholder: "グループ名を入力してください", id: "chat_group_name", class: "chat-group-form__input"
      .chat-group-form__field
        .chat-group-form__field--left
          = f.label "チャットメンバーを追加", class: "chat-group-form__label"
        .chat-group-form__field--right
          .chat-group-form__search
            = f.text_field :name, placeholder: "追加したいユーザー名を入力してください", class: "chat-group-form__input"
          #user-search-result
      .chat-group-form__field
        .chat-group-form__field--left
          = f.label "チャットメンバー", class: "chat-group-form__label"
        .chat-group-form__field--right
          #chat-group-users
            #chat-group-user-22.chat-group-user
              = f.collection_check_boxes :id, @users, :id, :name do |b|
                = b.label(class: "chat-group-user_name") { b.check_box + b.text }
      .chat-group-form__field
        .chat-group-form__field--left
        .chat-group-form__field--right
          = f.submit "commit", value: "Save", class: "chat-group-form__action-btn", "data-disable-with" => "Save"
