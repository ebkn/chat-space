.content__side__header
  .content__side__header__user
    = current_user.name
  .content__side__header__icon
    = link_to edit_user_registration_path, style: "color:white;" do
      = fa_icon "edit"
    = link_to new_group_path, style: "color:white" do
      = fa_icon "gear"
%ul
  %li.content__side__group
    - @groups.each do |group|
      = content_tag :div, group.name, class: "content__side__group__name"
      = content_tag :p, "hogehoge"
